@model IEnumerable<WebFizjoTerm.Models.Patient>

@{
    ViewBag.Title = "Index";
}

<h2>Pacjenci</h2>

<p>
    @Html.ActionLink("Nowy", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pesel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
